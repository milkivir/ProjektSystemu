{% extends 'base.html.twig' %}

{% block title %}Edytuj użytkownika{% endblock %}

{% block body %}
    {{ form_start(roleForm, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="main-banner" id="top">
    <divclass="form-group">
        {{ form_label(roleForm.roles, 'Wybierz nową rolę', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
        {{ form_widget(roleForm.roles, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Zmień</button>
        </div>
    </div>
</div>
{{ form_end(roleForm)}}
{% endblock %}
